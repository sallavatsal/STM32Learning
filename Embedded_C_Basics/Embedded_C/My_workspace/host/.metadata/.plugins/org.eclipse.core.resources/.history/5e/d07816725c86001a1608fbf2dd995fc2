#include <stdio.h>
#include <stdint.h>

int main(){
	// Applicability of Bitwise operators: Testing of bits(&)
	// Testing the LSB of any number to see if a number is odd/even
	uint8_t num;
	uint8_t mask = 0x1;

	printf("Enter a number: ");
	scanf("%i", &num);

	if((num&1) == 1)
		printf("Number is odd");
	else
		printf("Number is even");

	while(getchar()!='\n'){

	}
	getchar();

	return 0;
}
