#include <stdio.h>
#include <stdint.h>

int main(){
	// Applicability of Bitwise operators: Testing of bits(&)
	uint8_t num;

	printf("Enter a number: ");
	scanf("%d", &num);

	if(num&1 == 1)
		printf("Number is odd");
	else
		printf("Number is even");

	while(getchar()!='\n'){

	}
	getchar();

	return 0;
}
